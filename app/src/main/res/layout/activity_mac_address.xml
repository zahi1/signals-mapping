<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Input field for MAC Address -->
    <EditText
        android:id="@+id/input_mac_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter MAC Address"
        android:inputType="text"
        android:padding="8dp"/>

    <!-- Button to Add MAC Address -->
    <Button
        android:id="@+id/add_mac_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add MAC Address"
        android:layout_marginTop="8dp"/>

    <!-- RecyclerView to Display the MAC Addresses -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mac_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>

</LinearLayout>
